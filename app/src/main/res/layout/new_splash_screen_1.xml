<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_scre"
    android:layout_width="match_parent"
    android:layout_gravity="center|center_vertical"
    android:gravity="center|center_vertical"
    android:layout_height="match_parent"
    android:background="#1D202B"
    >

    <!-- Image Placeholder -->
    <ImageView
        android:id="@+id/image_placeholder"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:foregroundGravity="center"
        android:src="@drawable/logo_parkEase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parkease"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:fontFamily="@font/plusjakartasans_bolditalic"
        android:layout_below="@id/image_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
    />

</RelativeLayout>
